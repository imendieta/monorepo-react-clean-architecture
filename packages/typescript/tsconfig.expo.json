{
  "extends": "expo/tsconfig.base",
    "compilerOptions": {
       /* Target settings */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node", // "bundler" is optional but can cause issues with some libraries

    /* Bundler optimizations */
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true,

    /* Strictness and linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Helpful for stricter type checking
    "noUncheckedSideEffectImports": true,

    /* Type checking performance optimization */
    "skipDefaultLibCheck": true,

    /* Experimental options */
    "useDefineForClassFields": true
    },
  }
  
  